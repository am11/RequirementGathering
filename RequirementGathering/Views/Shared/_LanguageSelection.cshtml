@helper selected(string culture)
{
    @:/@culture/@ViewContext.RouteData.Values["controller"]/@ViewContext.RouteData.Values["action"]/@ViewContext.RouteData.Values["id"]
}

<ul class="nav navbar-nav navbar-right">
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@ViewBag.CurrentCulture.Parent.NativeName (@ViewBag.CurrentCulture.Name) <b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li><a href="@selected("en-US")">English</a></li>
            <li><a href="@selected("fi-FI")">Finnish</a></li>
            <li><a href="@selected("nl-NL")">Dutch</a></li>
        </ul>
    </li>
</ul>
