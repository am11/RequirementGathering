@model Evaluation

@{
    ViewBag.Title = Resources.EvaluationDescription;
    var evaluationDescriptionValue = Resource.GetPropertyValue<Evaluation>(Model.Id, "Description");
    var productDescriptionValue = Resource.GetPropertyValue<Product>(Model.Product.Id, "Description");
    var productNameValue = Resource.GetPropertyValue<Product>(Model.Product.Id, "Product.Name");
}

@{
    ViewBag.Title = "Exporting evaluation to an Excel file ";
}


<hr />

<h3>@Resources.Evaluation</h3>

<h5>@productNameValue - @Model.Version</h5>

<p>
    @evaluationDescriptionValue
</p>

@if (!string.IsNullOrEmpty(Model.ImageUrl))
{
    <img src="@Model.ImageUrl" alt="Product Image" class="img-responsive" />
}

<hr />

<h3>@Resources.ProductDescription</h3>

<p>
    @productDescriptionValue
</p>



<div>
    <input type="submit" value="@Resources.Export" class="btn btn-default" />
</div>



@section Scripts {
    @Scripts.Render("~/bundles/app")
}


