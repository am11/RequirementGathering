@model IEnumerable<Evaluation>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Version)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        var description = Resource.GetPropertyValue<Evaluation>(item.Id.ToString(), "Description");
        var product = Resource.GetPropertyValue<Evaluation>(item.Id.ToString(), "Product.Name");
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Version)
            </td>
            <td>
                @description
            </td>
            <td>
                @product
            </td>
            <td>
                @(item.IsActive ? "Yes" : "No")
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Send Invitation", "SendInvitation", new { id = item.Id })
            </td>
        </tr>
    }

</table>
