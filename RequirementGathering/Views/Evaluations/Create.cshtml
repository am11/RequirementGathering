@model Evaluation

@{
    ViewBag.Title = Resources.Create;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Evaluations", FormMethod.Post, new { @class = "evaluation-form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Resources.Evaluation</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.Partial("_CreateOrEdit")

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Resources.Create" class="evaluation-submit btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <a href="/@ViewBag.CurrentCulture/Evaluations">
        <span class="glyphicon glyphicon-hand-left"></span>&nbsp;@Resources.BackToList
    </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/app")
}
