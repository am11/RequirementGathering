@model Evaluation

@{
    ViewBag.Title = Resources.Details;
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>@Resources.Evaluation</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Version)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Version)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Resources.ProductName
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>

        <dd>
            @(Model.IsActive ? Resources.Yes : Resources.No)
        </dd>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <dd>
                <img src="@Model.ImageUrl" class="img-thumbnail" alt="Evaluation Image" />
            </dd>
        }
        else
        {
            <dd>@Resources.NoImageMessage</dd>
        }

    </dl>

    <br /><br />
    <h4>Attributes</h4>
    <hr />
    <ul class="dl-horizontal">
        @if (Model.Attributes.Any())
        {
            foreach (var attribute in Model.Attributes)
            {
                var attributeName = Resource.GetPropertyValue<RequirementGathering.Models.Attribute>(attribute.Id, "Name");

                <li class="badge text-center">
                    <span class="glyphicon-tag glyphicon"></span>
                    @attributeName
                </li>
            }
        }
        else
        {
            <li class="text-danger">
                @Resources.NoAttributesAvailable
            </li>
        }
    </ul>

</div>
<p>
    @Html.ActionLink(Resources.Edit, "Edit", new { id = Model.Id }) |
    @Html.ActionLink(Resources.BackToList, "Index")
</p>
