@model RegisterViewModel
@{
    ViewBag.Title = Resources.Create;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>@Resources.User</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        @Html.Partial("_CreateOrEdit")

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Resources.Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <a href="/@ViewBag.CurrentCulture/Account">
        <span class="glyphicon glyphicon-hand-left"></span>&nbsp;@Resources.BackToList
    </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}